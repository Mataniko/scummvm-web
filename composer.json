{
    "name": "scummvm/web",
    "description": "Scummvm.org main site",
    "type": "project",
    "authors": [
        {
            "name": "Matan Bareket",
            "email": "mataniko@scummvm.org"
        }
    ],
    "require": {
        "leafo/scssphp": "^0.7.6",
        "smarty/smarty": "^3.1",
        "ezyang/htmlpurifier": "^4.10"
    },
    "scripts": {
      "post-install-cmd": [
        "pscss -f compressed ./scss/main.scss > ./css/main.css",
        "pscss -f compressed ./scss/pages/_cloud-style.scss > ./css/cloud-style.css",
        "php include/I18N.php"
      ],
      "build": [
        "cd site-update;./install.sh;cd .."
      ],
      "run": [
        "php -S localhost:8000 dev-router.php & php dev-os.php"
      ],
      "develop": [
        "@build",
        "@run"
      ]
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.1",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
